<h1>Stylists</h1>

@if (@Model.Count == 0)
{
    <h3>No stylists have been added yet!</h3>
}

@foreach (var stylist in Model)
{
    <h3><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></h3>
}

<p><a href='/'>Back home</a></p>

@if (@Model.Count != 0)
{
<h4><a href="/stylists/deleteall">Delete All Stylists</a></h4>
}