
<h1>Add a stylist</h1>
<p>Add a stylist here:</p>

@if (@Model == null)
{
    <form action="/stylists" method="post">
        <label for="stylistName">Stylist name</label>
        <input id="stylistName" name="stylistName" type="text">
        <button type="submit">Add</button>
    </form>

    <p><a href="/stylists">Back to stylists.</a></p>
}
else
{
    <form action='/specialties/@Model.GetId()/stylists' method='post'>
        <input id='specialtyId' name='specialtyId' type='hidden' value='@Model.GetId()'>
        <label for='stylistName'>Stylist Name</label>
        <input id='stylistName' name='stylistName' type='text'>
        <button type='submit'>Add Stylist to specialty @Model.GetName()</button>
    </form>

    <p><a href="/specialties">Back to specialties.</a></p>
}


<p><a href="/">Back home</a></p>