<h1>Clients</h1>

@if (Model.Count == 0)
{
    <h3>No clients have been added yet!</h3>
}

@foreach (var client in Model)
{
    <h3><a href='/stylists/@client.GetStylistId()/clients/@client.GetId()'>@client.GetName()</a></h3>
}

<p><a href='/'>Back home</a></p>

@if (Model.Count != 0)
{
<h4><a href="/clients/deleteall">Delete All Clients</a></h4>
}